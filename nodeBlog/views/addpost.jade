extends layout

block content
 h2.page-header Register
 p Please register using the form below
 if errors
  each error, i in errors
   li.alert.alert-danger #{error.msg}
 form(method='post', action='/posts/add',enctype='multipart/form-data')
  .form-group
   label Title:
   input.form-control(name='title', type='text', placeholder='Enter Title Name')
  .form-group
   label Category
   select.form-control(name='category')
    each category, i in categories
     option(value='#{category.name}') #{category.name}
  .form-group
   label Body
   textarea.form-control(name='body', id='body')
  .form-group
   label Main Image:
   input.form-control(name='mainimage', type='file')
  .form-group
   label Confirm Author
   select.form-control(name='author')
    option(value='Manny Navarro') Manny Navarro
    option(value='Emaginas Bot Scrapper') Bot
  .form-group
  input.btn.btn-default(name='submit', type='submit', value='Save')
  script(src='/ckeditor/ckeditor.js')
  script
   | CKEDITOR.replace('body');
